    base ^>=4.14.1.0 || ^>=4.15.0.0
    , containers
    , text , unicode-transforms , unidecode , vty
    , aeson , bytestring
    , http-client , http-client-tls , network-uri
    , raw-strings-qq
    , microlens , microlens-th
    , async
  default-language:
    Haskell2010
  default-extensions:
    OverloadedStrings
    LambdaCase
    GeneralisedNewtypeDeriving
    InstanceSigs
    FlexibleInstances
    ScopedTypeVariables
    RecordWildCards
    DuplicateRecordFields


library
