    abbot-deps
  hs-source-dirs:
    src
  exposed-modules:
    Abbotsbury
    Abbotsbury.Cite
    Abbotsbury.Cite.Internal
    Abbotsbury.Cite.Helpers.Person
    Abbotsbury.Crossref
    Abbotsbury.Crossref.Internal
    Abbotsbury.LatexEscapes
    Abbotsbury.Work
  other-modules:
